    {
      "inputTagName": "input",
      "fieldName": "satScore",
      "placeholder": "Enter your SAT score",
      "fieldLabel": "SAT Score",
      "fieldType": "number",
      "fieldRequired": false
    },
    {
      "inputTagName": "input",
      "fieldName": "actScore",
      "placeholder": "Enter your ACT score",
      "fieldLabel": "ACT Score",
      "fieldType": "number",
      "fieldRequired": false
    }
  ],
  "buttons": [
    { "type": "submit", "value": "Submit Application" },
    { "type": "reset", "value": "Reset Form" }
  ]
}
