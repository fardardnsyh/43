{
  "formTitle": "College Football Team Selection Form",
  "formSubheading": "Please fill out this form to be considered for our team.",
  "fields": [
    {
      "inputTagName": "input",
      "fieldName": "firstName",
      "placeholder": "Enter your first name",
      "fieldLabel": "First Name",
      "fieldType": "text",
      "fieldRequired": true
    },
    {
      "inputTagName": "input",
      "fieldName": "lastName",
      "placeholder": "Enter your last name",
      "fieldLabel": "Last Name",
      "fieldType": "text",
      "fieldRequired": true
    },
    {
      "inputTagName": "input",
      "fieldName": "email",
      "placeholder": "Enter your email address",
      "fieldLabel": "Email Address",
      "fieldType": "email",
      "fieldRequired": true
    },
    {
      "inputTagName": "input",
      "fieldName": "phoneNumber",
      "placeholder": "Enter your phone number",
      "fieldLabel": "Phone Number",
      "fieldType": "tel",
      "fieldRequired": true
    },
    {
      "inputTagName": "select",
      "fieldName": "position",
      "fieldLabel": "Preferred Position",
      "fieldType": "select",
      "fieldRequired": true,
      "options": [
        { "value": "QB", "label": "Quarterback" },
        { "value": "RB", "label": "Running Back" },
        { "value": "WR", "label": "Wide Receiver" },
        { "value": "TE", "label": "Tight End" },
        { "value": "OL", "label": "Offensive Line" },
        { "value": "DL", "label": "Defensive Line" },
        { "value": "LB", "label": "Linebacker" },
        { "value": "DB", "label": "Defensive Back" },
        { "value": "K", "label": "Kicker" },
        { "value": "P", "label": "Punter" }
      ]
    },
    {
      "inputTagName": "textarea",
      "fieldName": "experience",
      "placeholder": "Describe your football experience",
      "fieldLabel": "Football Experience",
      "fieldType": "textarea",
      "fieldRequired": true
    },
    {
      "inputTagName": "input",
      "fieldName": "height",
      "placeholder": "Enter your height in inches",
      "fieldLabel": "Height (inches)",
      "fieldType": "number",
      "fieldRequired": true
    },
    {
      "inputTagName": "input",
      "fieldName": "weight",
      "placeholder": "Enter your weight in pounds",
      "fieldLabel": "Weight (pounds)",
      "fieldType": "number",
      "fieldRequired": true
    },
    {
      "inputTagName": "input",
      "fieldName": "gpa",
      "placeholder": "Enter your GPA",
      "fieldLabel": "GPA",
      "fieldType": "number",
      "fieldRequired": true
